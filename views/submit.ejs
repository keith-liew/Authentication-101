<%- include('partials/header') %>

  <div class="container">
    <div class="jumbotron centered p-5">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">Secrets</h1>
      <img
        src="https://media4.giphy.com/media/fU0nMU3JVsj9dwdzaz/giphy.gif?cid=790b761125defd0c5f0927a70f6bf7416ce76a28528cefcd&rid=giphy.gif&ct=g"
        width="360" height="257" frameBorder="0"></img>
      <br>
      <br>
      <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

      <form action="/submit" method="POST">

        <div class="form-group">
          <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?" required>
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
        <a class="btn btn-light btn-outline-dark" href="/secrets" role="button">Cancel</a>
      </form>
      <hr>
      <h4 class="display-4">Your record</h4>
      <% if(secrets.length === 0){%>
        <p class="secret-text">NONE</p>
        <% } else {%>
          <% secrets.forEach((secret)=>{ %>
            <form action="/secret/<%=secret%>?_method=DELETE" method="POST">
            <p class="secret-text"><%=secret%><button class="btn btn-danger delete-btn" action="submit">-</button></p>
            </form>
          <%})%>  
        <%}%>
    </div>
  </div>
  <%- include('partials/footer') %>